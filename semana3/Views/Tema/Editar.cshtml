}

<h1>Editar</h1>
<form action="/tema/editar" method="post">
    <div class="form-group">
        <label>Tema</label>
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="text" name="Titulo" value="@Model.Titulo" />
        @Html.ValidationMessage("Titulo")
    </div>
    <div class="form-group">
        <label>Categoria</label>
        <select class="form-control" name="CategoriaId">
            <option value="value">Seleccione Categoria</option>
            @foreach (var item in ViewBag.Categoria)
            {
                if (item.Id == Model.CategoriaId)
                {
                    <option selected value="@item.Id">@item.Nombre</option>
                }
                else
                {
                    <option value="@item.Id">@item.Nombre</option>
                }

            }
        </select>
        @Html.ValidationMessage("CategoriaId")
        <button>Guardar</button>
    </div>
</form>

