
@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Tema</h1>

<form action="/Tema/Crear" method="post">

    <div class="form-group">
        <label>Titulo</label>
        <input type="text" class="form-control" name="Titulo" value="@Model.Titulo" />
        @Html.ValidationMessage("Titulo")
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <select class="form-control" name="CategoriaId">
            <option value="value">Seleccione Categoria</option>
            @foreach (var item in ViewBag.Categoria)
            {
                if (item.Id == Model.CategoriaId)
                {
                    <option selected value="@item.Id">@item.Nombre</option>
                }
                else
                {
                    <option value="@item.Id">@item.Nombre</option>
                }

            }
        </select>
        @Html.ValidationMessage("CategoriaId")
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Guardar</button>
    </div>
    <div class="form-group">
        <a class="btn btn-primary" href="/Tema/Index">Cancelar</a>
    </div>
</form>

